<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="319.0" prefWidth="504.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.okcu.imagefx.ImageFXController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox>
      <ComboBox fx:id="cmbFilterSelect" prefHeight="25.0" prefWidth="151.0" />
        <ImageView fx:id="imgPicture" fitWidth="500" HBox.hgrow="ALWAYS" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin></ImageView>
        <ImageView fx:id="imgNewPicture" fitWidth="500" HBox.hgrow="ALWAYS" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin></ImageView>
    </HBox>

    <Button onAction="#onHelloButtonClick" text="Load" />
</VBox>
