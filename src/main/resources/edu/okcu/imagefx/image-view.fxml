<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="319.0" prefWidth="504.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.okcu.imagefx.ImageFXController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="288.0" prefWidth="515.0" style="-fx-spacing: 15;">
        <ImageView fx:id="imgPicture" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fx:id="imgNewPicture" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
    </HBox>
   <HBox alignment="CENTER" prefWidth="500.0" spacing="75">
      <children>
         <Button mnemonicParsing="false" onAction="#onLeftLoadButtonClick" text="Zoom" />
         <ComboBox fx:id="filterComboBox" prefWidth="150.0" />
         <Button mnemonicParsing="false" onAction="#onRightLoadButtonClick" text="Zoom" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 15;">
      <children>
          <Button alignment="CENTER" minWidth="60" onAction="#onLoadButtonClick" text="Load" textAlignment="CENTER" />
         <Button minWidth="60" mnemonicParsing="false" onAction="#onApplyButtonClick" text="Apply" textAlignment="CENTER" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
</VBox>
