<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="235.0" prefWidth="515.0" style="-fx-spacing: 15;">                           
        <ImageView fx:id="imgPicture" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fx:id="imgNewPicture" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
    </HBox>
   <HBox alignment="CENTER" prefWidth="500.0" spacing="75">
      <children>
         <Button mnemonicParsing="false" onAction="#onLeftLoadButtonClick" text="Zoom" />
         <ComboBox fx:id="filterComboBox" prefWidth="150.0" />
         <Button mnemonicParsing="false" onAction="#onRightLoadButtonClick" text="Zoom" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 15;">
      <children>
          <Button alignment="CENTER" minWidth="60" onAction="#onLoadButtonClick" prefHeight="25.0" prefWidth="64.0" text="Load" textAlignment="CENTER" />
         <Button mnemonicParsing="false" onAction="#onApplyButtonClick" prefHeight="25.0" prefWidth="64.0" text="Apply" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
</VBox>
